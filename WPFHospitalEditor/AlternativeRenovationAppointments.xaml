<Window x:Class="WPFHospitalEditor.AlternativeRenovationAppointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHospitalEditor"
        mc:Ignorable="d"
        Title="AlternativeRenovationAppointments" Height="150" Width="490" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Stretch">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Height="50" Margin="10,10,10,0" >
            <TextBlock x:Name="givenRoom" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="20,20,20,0">
            <Button Width="80" x:Name="close" HorizontalAlignment="Left" Margin="10,0,50,0" Click="CloseClick">Close</Button>
            <Button Width="120" x:Name="showAppointments" HorizontalAlignment="Right" Margin="160,0,0,0" Click="ShowAppointments">Show appointments</Button>
        </StackPanel>
    </StackPanel>
</Window>
