        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHospitalEditor"
        mc:Ignorable="d"
        Title="HospitalMap" Height="750" Width="900" MinHeight="600" MinWidth="900" WindowStartupLocation="CenterScreen" Background="#FFC6F5F8">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Left" Margin="30,10,0,40" TextWrapping="Wrap" Text="Mapa bolnice" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <Canvas MinHeight="550" Margin="0,0,0,20" Background="LightGreen" Name="canvas" MouseLeftButtonDown="selectBuilding" MouseMove="Canvas_MouseMove" ToolTip="My Tool Tip" ToolTipService.InitialShowDelay="1" ToolTipService.IsEnabled="False"/>

    </StackPanel>
</Window>
